{
  "expo": {
    "name": "Palletium",
    "slug": "palletium-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "palletium",
    "userInterfaceStyle": "dark",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#161922"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.palletium.app",
      "buildNumber": "1",
      "usesAppleSignIn": true,
      "infoPlist": {
        "UIBackgroundModes": [
          "audio",
          "fetch"
        ],
        "NSMicrophoneUsageDescription": "Palletium does not require microphone access.",
        "NSCameraUsageDescription": "Palletium uses the camera to let you upload a profile picture.",
        "NSPhotoLibraryUsageDescription": "Palletium accesses your photos to let you upload a profile picture.",
        "NSAppleMusicUsageDescription": "Palletium needs access to play music in the background.",
        "ITSAppUsesNonExemptEncryption": false
      },
      "config": {
        "usesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#161922"
      },
      "package": "com.palletium.app",
      "versionCode": 1,
      "permissions": [
        "android.permission.INTERNET",
        "android.permission.WAKE_LOCK",
        "android.permission.FOREGROUND_SERVICE"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      "expo-web-browser",
      "expo-apple-authentication"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "9c102464-a6ad-4b18-a401-bf1973328fe2"
      }
    },
    "owner": "josephxgalloway",
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "updates": {
      "url": "https://u.expo.dev/9c102464-a6ad-4b18-a401-bf1973328fe2"
    }
  }
}
